{
    "name": "dogbook",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "clean": "rimraf ./packages/*/dist",
        "build": "tsc --build",
        "lint": "eslint . --fix && prettier . --write",
        "pretest": "yarn build && yarn lint",
        "test": "yarn test:only",
        "test:only": "mocha \"packages/*/dist/test/**/*.spec.js\"",
        "start": "yarn start:client",
        "start:client": "yarn workspace @sample/app start",
        "start:server": "yarn workspace @sample/server start",
        "prettify": "npx prettier . --write"
    },
    "devDependencies": {
        "@types/chai": "^4.2.15",
        "@types/compression": "^1.7.0",
        "@types/express": "^4.17.11",
        "@types/mocha": "^8.2.1",
        "@types/node": "12",
        "@types/react": "^17.0.2",
        "@types/react-dom": "^17.0.1",
        "@typescript-eslint/eslint-plugin": "^4.15.2",
        "@typescript-eslint/parser": "^4.15.2",
        "chai": "^4.3.0",
        "css-loader": "^5.0.2",
        "eslint": "^7.20.0",
        "eslint-config-prettier": "^8.0.0",
        "eslint-plugin-no-only-tests": "^2.4.0",
        "eslint-plugin-react": "^7.22.0",
        "eslint-plugin-react-hooks": "^4.2.0",
        "eslint-plugin-jest-dom": "^3.2.2",
        "eslint-plugin-jsx-a11y": "^6.3.1",
        "eslint-plugin-prettier": "^3.1.4",
        "eslint-plugin-testing-library": "^3.8.0",
        "prettier": "^2.2.1",
        "file-loader": "^6.2.0",
        "html-webpack-plugin": "^5.2.0",
        "lerna": "^4.0.0",
        "mini-css-extract-plugin": "^1.3.8",
        "mocha": "^8.3.0",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "rimraf": "^3.0.2",
        "source-map-loader": "^2.0.1",
        "ts-loader": "^8.0.17",
        "typescript": "~4.1.5",
        "webpack": "^5.24.0",
        "webpack-cli": "^4.5.0",
        "webpack-dev-server": "^3.11.2"
    },
    "license": "MIT"
}
